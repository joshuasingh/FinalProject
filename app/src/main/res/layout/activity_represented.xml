<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joshuamsingh.producto.represented">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/y1"
        android:text="gt"
        android:layout_below="@+id/e1"
        android:layout_alignParentStart="true" />

    <fragment
        android:id="@+id/mapfragment"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sear"
        android:id="@+id/b1"
        android:layout_below="@+id/mapfragment"
        android:layout_toEndOf="@+id/e1"
        android:layout_marginStart="24dp" />
    <NumberPicker
        android:id="@+id/np"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignBaseline="@+id/b1"
        android:layout_alignBottom="@+id/b1"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/e1"
        android:layout_width="150dp"
        android:layout_below="@+id/mapfragment"
        android:layout_height="40dp"
        android:hint="enter the product" />

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current"
        android:layout_below="@+id/e1"
        android:layout_toEndOf="@+id/y1"
        android:layout_marginStart="17dp" />
    <com.github.mikephil.charting.charts.PieChart
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/piechart"
        android:layout_below="@+id/np"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pie"
        android:id="@+id/p"
        android:layout_below="@+id/b1"
        android:layout_toEndOf="@+id/b2"
        android:layout_marginStart="12dp" />


</RelativeLayout>
